  <section id="avatar-modal" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.55); z-index:12000; align-items:center; justify-content:center;">
    <section style="background:#fff; border-radius:24px; padding:2em 1.5em 1.5em 1.5em; max-width:420px; width:90vw; box-shadow:0 8px 32px #0076CA44; text-align:center; position:relative;">
      <button onclick="document.getElementById('avatar-modal').style.display='none'" style="position:absolute; top:1em; right:1em; background:none; border:none; font-size:2em; color:#0076CA; cursor:pointer;">&times;</button>
      <h2 style="font-family:'Baloo 2',cursive; color:#0076CA; font-size:1.3em; font-weight:800; margin-bottom:1.2em;">Escolha seu Avatar</h2>
      <section style="display:grid; grid-template-columns:repeat(4,1fr); gap:1em; justify-items:center;">
        <img src="/img/tcc.img/animal1.png" alt="Avatar 1" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal1.png')">
        <img src="/img/tcc.img/animal2.png" alt="Avatar 2" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal2.png')">
        <img src="/img/tcc.img/animal3.png" alt="Avatar 3" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal3.png')">
        <img src="/img/tcc.img/animal4.png" alt="Avatar 4" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal4.png')">
        <img src="/img/tcc.img/animal5.png" alt="Avatar 5" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal5.png')">
        <img src="/img/tcc.img/animal6.png" alt="Avatar 6" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal6.png')">
        <img src="/img/tcc.img/animal7.png" alt="Avatar 7" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal7.png')">
        <img src="/img/tcc.img/animal8.png" alt="Avatar 8" class="avatar-option" style="width:64px; height:64px; border-radius:50%; border:3px solid #0076CA; cursor:pointer; transition:transform 0.2s;" onclick="selecionarAvatar('/img/tcc.img/animal8.png')">
      </section>
    </section>
  </section>

  <script>
    function selecionarAvatar(src) {
      
      var avatar = document.querySelector('.aluno-avatar');
      if(avatar) avatar.src = src;
      document.getElementById('avatar-modal').style.display = 'none';
      
    }
  </script>
