<script>
  
  document.addEventListener('DOMContentLoaded', function() {
    const roleBtns = document.querySelectorAll('.role-btn');
    const roleInput = document.getElementById('roleInput');
    const loginForm = document.getElementById('mainLoginForm');
    roleBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        if (btn.getAttribute('data-role') === 'professor') {
          window.location.href = '/professor/login';
          return;
        }
        if (btn.getAttribute('data-role') === 'aluno') {
          window.location.href = '/aluno/login';
          return;
        }
        roleBtns.forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');
        roleInput.value = btn.getAttribute('data-role');
      });
      btn.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          btn.click();
        }
      });
    });
    loginForm.addEventListener('submit', function(e) {
   
      const selectedBtn = document.querySelector('.role-btn.selected');
      if (selectedBtn) {
        roleInput.value = selectedBtn.getAttribute('data-role');
      }
    });
  });
</script>
