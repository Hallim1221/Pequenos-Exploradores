    <form class="login-aluno-form" method="POST" action="/aluno/login">
  <input type="email" name="email" placeholder="E-mail do Aluno" required autocomplete="email" style="width:100%;max-width:600px;box-sizing:border-box;">
  <input type="password" name="password" id="aluno-login-password" placeholder="Senha" required autocomplete="current-password" style="width:100%;max-width:600px;box-sizing:border-box;">
  <section id="aluno-login-senha-erro" style="display:none;color:#b71c1c;background:#ffeaea;border:1px solid #e57373;border-radius:8px;padding:0.3em 0.4em;margin-bottom:0.2em;font-weight:600;font-size:0.98em;min-height:1.2em;line-height:1.2em;box-sizing:border-box;overflow:hidden;max-width:600px;white-space:nowrap;text-overflow:ellipsis;"></section>
      <button type="submit" class="login-aluno-btn">Entrar</button>
    </form>
      <script>
        document.addEventListener('DOMContentLoaded', function(){
          var form = document.querySelector('.login-aluno-form');
          var senha = document.getElementById('aluno-login-password');
          var erro = document.getElementById('aluno-login-senha-erro');
          if(form && senha && erro){
            form.addEventListener('submit', function(e){
              erro.style.display = 'none';
              if(senha.value.length < 6){
                erro.textContent = 'A senha deve ter pelo menos 6 caracteres.';
                erro.style.display = 'block';
                senha.focus();
                e.preventDefault();
              }
            });
            senha.addEventListener('input', function(){
              if(senha.value.length < 6){
                erro.textContent = 'A senha deve ter pelo menos 6 caracteres.';
                erro.style.display = 'block';
              }else{
                erro.style.display = 'none';
              }
            });
          }
        });
      </script>
