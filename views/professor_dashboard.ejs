<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel do Professor</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@700;800&family=Fredoka:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/btn-voltar.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      font-family: 'Fredoka', 'Baloo 2', Arial, sans-serif;
      background: linear-gradient(120deg, #3bb273 0%, #00CFFF 100%);
      background-attachment: fixed;
      overflow-x: hidden;
      position: relative;
    }
    .bg-figma {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0;
      background: url('/img/tcc.img/tela inicio.png') center center/cover no-repeat;
      opacity: 0.18;
      pointer-events: none;
      transition: opacity 0.4s;
    }
    .dashboard-container {
      max-width: 650px;
      margin: 4.5em auto 0 auto;
      padding: 2.5em 2em 2.5em 2em;
      background: rgba(255,255,255,0.93);
      border-radius: 18px;
      box-shadow: 0 4px 32px 0 rgba(60, 180, 115, 0.10), 0 1.5px 8px 0 rgba(0,0,0,0.04);
      position: relative;
      z-index: 2;
      display: flex;
      flex-direction: column;
      align-items: center;
      animation: fadeInUp 0.7s;
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(40px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .dashboard-container h1 {
      text-align: center;
      font-family: 'Baloo 2', 'Fredoka', Arial, sans-serif;
      font-size: 2em;
      color: #00CFFF;
      font-weight: 800;
      margin-bottom: 1.2em;
      margin-top: 0.5em;
      letter-spacing: 0.01em;
    }
    .dashboard-container h2 {
      font-size: 1.2em;
      margin-bottom: 1em;
      color: #3bb273;
      font-weight: 700;
    }
    .series {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 18px;
    }
    .serie-card {
      background: linear-gradient(90deg, #fffbe7 60%, #FFD600 100%);
      border-radius: 14px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.07);
      padding: 18px 14px 14px 14px;
      min-width: 0;
      transition: box-shadow 0.18s, transform 0.18s;
      border: 1.5px solid #FFD600;
      animation: fadeInUp 0.7s;
    }
    .serie-card:hover {
      box-shadow: 0 6px 24px 0 rgba(255, 214, 0, 0.13), 0 2px 8px 0 rgba(0,0,0,0.10);
      transform: scale(1.02);
    }
    .serie-card h3 {
      margin-bottom: 0.5em;
      font-size: 1.1em;
      color: #3bb273;
      font-weight: 700;
    }
    .serie-card table {
      width: 100%;
      font-size: 1em;
      border-collapse: collapse;
    }
    .serie-card th, .serie-card td {
      background: #fffbe7;
      padding: 0.5em 0.7em;
      border-radius: 6px;
      text-align: left;
    }
    .serie-card th {
      color: #FFD600;
      font-weight: 700;
      font-size: 1em;
    }
    .serie-card td {
      color: #222;
      font-size: 1em;
    }
    @media (max-width: 700px) {
      .dashboard-container {
        max-width: 98vw;
        padding: 1.2em 0.5em 1.5em 0.5em;
        border-radius: 10px;
      }
      .dashboard-container h1 {
        font-size: 1.25em;
      }
    }
  </style>
</head>
<body>
  <div class="bg-figma"></div>
  <button class="btn-voltar" onclick="window.history.back()" aria-label="Voltar" style="z-index: 11000; position: fixed; top: 0.5em; right: 0.5em; left: auto;">
    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <circle cx="24" cy="24" r="22" fill="#00CFFF"/>
      <polygon points="30,14 18,24 30,34" fill="#0077B6"/>
      <ellipse cx="38" cy="38" rx="2.5" ry="1.5" fill="#B2F7EF"/>
    </svg>
  </button>
  <div style="height: 32px;"></div>
  <div class="container" style="position:relative;overflow:hidden;">
    <svg style="position:absolute;top:-40px;right:-40px;z-index:0;opacity:0.13;" width="180" height="180"><circle cx="90" cy="90" r="90" fill="#00CFFF"/></svg>
    <svg style="position:absolute;bottom:-40px;left:-40px;z-index:0;opacity:0.13;" width="180" height="180"><circle cx="90" cy="90" r="90" fill="#FFD600"/></svg>
    <h1 style="z-index:1;position:relative;font-size:2.1em;color:#00CFFF;font-family:'Baloo 2',cursive;text-align:center;font-weight:800;letter-spacing:0.01em;margin-bottom:1.5em;">Selecione a Série</h1>
    <div class="series-col" style="z-index:1;position:relative;display:flex;flex-direction:column;align-items:center;gap:1.1em;margin-top:2.5em;">
      <% series.forEach(function(serie, idx) { %>
        <form action="/professor/serie/<%= serie %>" method="get" style="margin:0;width:100%;">
          <button class="serie-card-btn <%= idx%2===0 ? 'btn-green' : 'btn-blue' %>" type="submit" style="width:100%;max-width:370px;">
            <span style="font-size:1.23em;font-weight:800;letter-spacing:0.01em;">Séries - <%= serie %></span>
          </button>
        </form>
      <% }) %>
    </div>
  </div>
  <style>
    @keyframes fadeInSerie {
      from { opacity:0; transform:translateY(30px) scale(0.95); }
      to { opacity:1; transform:translateY(0) scale(1); }
    }
    .serie-card-btn {
      color: #fff;
      font-weight: 800;
      font-size: 1.23em;
      border: none;
      border-radius: 18px;
      padding: 0.95em 1.5em;
      cursor: pointer;
      box-shadow: 0 4px 18px 0 rgba(0,0,0,0.13);
      outline: none;
      margin-bottom: 0.9em;
      transition: background 0.18s, transform 0.18s, box-shadow 0.18s;
      letter-spacing: 0.01em;
      min-width: 120px;
      width: 100%;
      max-width: 370px;
      display: block;
      text-align: left;
      box-sizing: border-box;
      opacity: 0.97;
    }
    .btn-green {
      background: #4bb273;
    }
    .btn-blue {
      background: #2196f3;
    }
    .serie-card-btn:hover {
      opacity: 1;
      transform: scale(1.03);
      box-shadow: 0 8px 32px 0 rgba(0,207,255,0.18);
      filter: brightness(1.08);
    }
    @media (max-width: 700px) {
      .series-col { gap: 0.7em; }
    }
  </style>
</body>
</html>
