<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Turmas - <%= serie %></title>
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@700;800&family=Fredoka:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/professor_turmas.css">
</head>
<body>
  <!-- Botão minimalista para postar para todas as turmas -->
  <button id="btn-postar-todas" title="Postar para todas as turmas" style="position:fixed;top:1.2em;left:1.2em;z-index:12000;background:#fff;border:none;border-radius:50%;width:44px;height:44px;box-shadow:0 2px 8px #00cfff33;display:flex;align-items:center;justify-content:center;cursor:pointer;transition:background 0.2s;">
    <svg width="24" height="24" viewBox="0 0 24 24"><circle cx="12" cy="12" r="11" fill="#00CFFF"/><path d="M12 7v10M7 12h10" stroke="#fff" stroke-width="2" stroke-linecap="round"/></svg>
  </button>

  <!-- Modal de postagem para todas as turmas -->
  <section id="modal-postar-todas" style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;background:#003366cc;z-index:13000;align-items:center;justify-content:center;">
    <form action="/professor/postar-todas" method="POST" enctype="multipart/form-data" style="background:#fff;border-radius:18px;max-width:420px;width:90vw;padding:2em 1.5em;box-shadow:0 6px 32px #00cfff33;display:flex;flex-direction:column;gap:1.2em;position:relative;">
      <button type="button" onclick="document.getElementById('modal-postar-todas').style.display='none'" style="position:absolute;top:1em;right:1em;background:none;border:none;font-size:1.7em;color:#00CFFF;cursor:pointer;">&times;</button>
      <h2 style="color:#003366;font-size:1.3em;text-align:center;margin-bottom:0.5em;">Postar para todas as turmas</h2>
      <label style="font-weight:600;color:#00518C;">Tipo de postagem:</label>
      <select name="tipo" required style="padding:0.5em 1em;border-radius:8px;border:1.5px solid #00CFFF;">
        <option value="quiz">Quiz</option>
        <option value="video">Vídeo</option>
      </select>
      <label style="font-weight:600;color:#00518C;">Título:</label>
      <input type="text" name="titulo" required placeholder="Título do quiz ou vídeo" style="padding:0.7em 1em;border-radius:8px;border:1.5px solid #00CFFF;">
      <label style="font-weight:600;color:#00518C;">Descrição:</label>
      <textarea name="descricao" required placeholder="Descrição..." style="padding:0.7em 1em;border-radius:8px;border:1.5px solid #00CFFF;min-height:70px;"></textarea>
      <label style="font-weight:600;color:#00518C;">Arquivo (opcional):</label>
      <input type="file" name="arquivo" accept="video/*,application/pdf,image/*">
      <button type="submit" style="background:#00CFFF;color:#fff;font-weight:700;border:none;border-radius:8px;padding:0.8em 2em;font-size:1.1em;box-shadow:0 2px 8px #00cfff55;cursor:pointer;">Postar</button>
    </form>
  </section>

  <script>
    document.getElementById('btn-postar-todas').onclick = function() {
      document.getElementById('modal-postar-todas').style.display = 'flex';
    };
  </script>
  <section class="container">
    <svg class="svg-top-right" width="180" height="180"><circle cx="90" cy="90" r="90" fill="#FFD600"/></svg>
    <svg class="svg-bottom-left" width="180" height="180"><circle cx="90" cy="90" r="90" fill="#00CFFF"/></svg>
    <h1><span class="titulo-icone">🏫</span> Turmas do <span class="titulo-serie"><%= serie %></span></h1>
    <section class="turmas-list">
      <% turmas.forEach(function(turma, idx) { %>
        <form action="/professor/serie/<%= serie %>/turma/<%= turma %>" method="get">
          <button class="turma-btn" type="submit" style="animation:fadeInTurma 0.5s <%= idx*0.07 %>s both;">
            <span class="titulo-icone">👥</span> Turma <%= turma %>
          </button>
        </form>
      <% }) %>
    </section>
    <a href="/professor/dashboard" class="voltar">⏪ Voltar para séries</a>
  </section>
</body>
</html>
