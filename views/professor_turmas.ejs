<body>
  <!-- Bot√£o minimalista para postar para todas as turmas -->
  <button id="btn-postar-todas" title="Postar para todas as turmas" style="position:fixed;top:3.5em;left:1.2em;z-index:12000;background:#fff;border:none;border-radius:50%;width:44px;height:44px;box-shadow:0 2px 8px #00cfff33;display:flex;align-items:center;justify-content:center;cursor:pointer;transition:background 0.2s;">
    <svg width="24" height="24" viewBox="0 0 24 24"><circle cx="12" cy="12" r="11" fill="#00CFFF"/><path d="M12 7v10M7 12h10" stroke="#fff" stroke-width="2" stroke-linecap="round"/></svg>
  </button>

  <!-- Modal de postagem para todas as turmas -->
