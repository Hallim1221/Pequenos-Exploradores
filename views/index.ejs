  .btn-explore {
    background: #3b6ed6;
    color: #fff;
    min-width: 100px;
    max-width: 30vw;
    padding: 0.55em 0;
    font-size: 2.1em;
    border-radius: 22px;
    text-align: center;
    font-weight: 700;
    border: none;
    box-shadow: 0 8px 36px rgba(59,110,214,0.22), 0 2px 12px rgba(0,0,0,0.18);
