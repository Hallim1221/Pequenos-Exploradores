    display: block;
    outline: none;
    cursor: pointer;
    text-decoration: none;
    letter-spacing: 0.01em;
    font-family: 'Fredoka', 'Quicksand', Arial, sans-serif;
  }
  .btn-explore:hover {
    background: #1976d2;
    color: #fff;
    transform: scale(1.03);
    box-shadow: 0 10px 40px rgba(25,118,210,0.25);
  }
  .features-list article {
    background: #fffbe7;
    border-radius: 18px;
    padding: 1.2em;
    box-shadow: 0 2px 12px rgba(255,214,0,0.10);
    margin-bottom: 1em;
    border: 1.5px solid #FFD60022;
  }
  .features-list h3 {
    color: #117741;
    font-weight: 700;
    margin-bottom: 0.3em;
  }
  .features-list p {
    color: #333;
    font-size: 1em;
  }
  @media (max-width: 600px) {
    .hero h1 { font-size: 1.1em; }
    .btn-explore { min-width: 90vw; font-size: 1.1em; border-radius: 16px; }
    .features-list article { padding: 0.8em; }
  }
</style>
