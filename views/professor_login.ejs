  <section class="login-aluno-container" style="margin-top: 5.5em; background: linear-gradient(120deg, #003366 70%, #00518C 100%); box-shadow: 0 6px 32px #00cfff33; border: 3px solid #00CFFF;">
    <h1 style="font-size:2em; font-weight:800; color:#FFD600; text-align:center; margin-bottom:0.7em; letter-spacing:0.01em;">√Årea do<br><span style="color:#FFD600; font-size:1.15em; font-weight:800; letter-spacing:0.03em;">Professor</span></h1>
    <% if (typeof erro !== 'undefined' && erro) { %>
      <section class="erro-msg"><%= erro %></section>
    <% } %>
    <form class="login-aluno-form" action="/professor/dashboard" method="POST">
  <input type="email" name="email" placeholder="E-mail do Professor" required autocomplete="email" style="width:100%;max-width:600px;box-sizing:border-box;">
  <input type="password" name="senha" id="prof-login-password" placeholder="Senha" required autocomplete="current-password" style="width:100%;max-width:600px;box-sizing:border-box;">
  <section id="prof-login-senha-erro" style="display:none;color:#b71c1c;background:#ffeaea;border:1px solid #e57373;border-radius:8px;padding:0.3em 0.4em;margin-bottom:0.2em;font-weight:600;font-size:0.98em;min-height:1.2em;line-height:1.2em;box-sizing:border-box;overflow:hidden;max-width:600px;white-space:nowrap;text-overflow:ellipsis;"></section>
      <button type="submit" class="login-aluno-btn">Entrar</button>
    </form>
    <script>
      document.addEventListener('DOMContentLoaded', function(){
        var form = document.querySelector('.login-aluno-form');
        var senha = document.getElementById('prof-login-password');
        var erro = document.getElementById('prof-login-senha-erro');
        if(form && senha && erro){
          form.addEventListener('submit', function(e){
            erro.style.display = 'none';
            if(senha.value.length < 6){
              erro.textContent = 'A senha deve ter pelo menos 6 caracteres.';
              erro.style.display = 'block';
              senha.focus();
              e.preventDefault();
            }
          });
          senha.addEventListener('input', function(){
            if(senha.value.length < 6){
              erro.textContent = 'A senha deve ter pelo menos 6 caracteres.';
              erro.style.display = 'block';
            }else{
              erro.style.display = 'none';
            }
          });
        }
      });
    </script>
    </form>
