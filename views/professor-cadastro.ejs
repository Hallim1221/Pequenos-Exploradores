<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>Cadastro de Professor</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@700;800&family=Fredoka:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/btn-voltar.css">
  <link rel="stylesheet" href="/css/cadastro-professor.css">
</head>
<body class="cadastro-professor-body">
  <button class="btn-voltar" onclick="window.history.back()" aria-label="Voltar" style="z-index: 11000; position: fixed; top: 0.5em; right: 0.5em; left: auto;">
    <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="filter: drop-shadow(0 2px 10px #FFD60088);">
      <circle cx="30" cy="30" r="27" fill="#FFD600"/>
      <path d="M38 30c0 1.2-1 2.2-2.2 2.2H26.5l3.2 3.2c0.8 0.8 0.8 2.2 0 3-0.8 0.8-2.2 0.8-3 0l-7-7c-0.8-0.8-0.8-2.2 0-3l7-7c0.8-0.8 2.2-0.8 3 0 0.8 0.8 0.8 2.2 0 3l-3.2 3.2h9.3c1.2 0 2.2 1 2.2 2.2z" fill="#00518C"/>
    </svg>
  </button>
  <section class="top-banner"></section>
  <nav class="sidebar-menu" id="sidebarMenu">
    <section style="width:100%;display:flex;flex-direction:column;align-items:center;padding:0.7em 0 0.2em 0;">
      <section style="background:#fff;border-radius:50%;box-shadow:0 4px 24px #0002,0 0 0 4px #fff;display:flex;align-items:center;justify-content:center;width:142px;height:142px;position:relative;">
        <img src="/img/shared image.png" alt="Logo Pequenos Exploradores" 
          style="width:126px;height:126px;object-fit:contain;display:block;background:none;filter:drop-shadow(0 2px 12px #0001);"
          loading="lazy">
      </section>
      <section style="margin-top:0.3em;text-align:center;width:100%;"></section>
    </section>
    <button class="sidebar-close" onclick="document.getElementById('sidebarMenu').classList.remove('open')">&times;</button>
    <ul>
      <li><a href="/">Início</a></li>
      <li><a href="/sobre">Sobre</a></li>
      <li><a href="https://www.instagram.com/pequenos_.exploradores_?igsh=MWthZnZ6eG1xeDlxdw==" target="_blank" rel="noopener">Contato</a></li>

      <li><a href="/loja">Futuro</a></li>


    </ul>
  </nav>
  <button class="sidebar-toggle" onclick="document.getElementById('sidebarMenu').classList.add('open')" aria-label="Abrir menu lateral" style="background: transparent; border: none; box-shadow: none; position: fixed; top: -0.3em; left: 0.7em; z-index: 11500;">
    <svg width="28" height="28" viewBox="0 0 28 28"><rect y="4" width="28" height="4" rx="2" fill="#fff"/><rect y="12" width="28" height="4" rx="2" fill="#fff"/><rect y="20" width="28" height="4" rx="2" fill="#fff"/></svg>
  </button>
  <link rel="stylesheet" href="/css/index.css">
  <section style="height: 32px;"></section>
  <section class="cadastro-professor-container">
    <section style="display: flex; flex-direction: column; align-items: center; gap: 0.7em; margin-bottom: 1.2em;">
      <img src="/img/tcc.img/animal5.png" alt="Mascote Professor" style="width: 70px; height: 70px; border-radius: 50%; box-shadow: 0 2px 12px #FFD60033; background: #fff; border: 3px solid #FFD600; margin-bottom: 0.2em;">
      <h1 class="cadastro-professor-titulo" style="margin-bottom: 0;">Crie sua conta de <span>Professor</span></h1>
      <span style="color: #FFD600; font-size: 1.1em; font-weight: 700; text-shadow: 0 2px 8px #FFD60055;">Acesse recursos exclusivos para professores!</span>
    </section>
    <form class="cadastro-professor-form" method="POST" action="/professor/dashboard">
      <input type="text" name="nome" placeholder="Nome completo" required autocomplete="name">
      <input type="email" name="email" placeholder="E-mail do Professor" required autocomplete="email">
      <input type="password" name="password" id="prof-password" placeholder="Crie uma senha" required autocomplete="new-password">
      <input type="password" name="confirmPassword" id="prof-confirm-password" placeholder="Confirme a senha" required autocomplete="new-password">
  <section id="prof-senha-erro" style="display:none;color:#b71c1c;background:#ffeaea;border:1px solid #e57373;border-radius:8px;padding:0.5em 1em;margin-bottom:0.7em;font-weight:600;font-size:1em;"></section>
  <section id="prof-senha-min-erro" style="display:none;color:#b71c1c;background:#ffeaea;border:1px solid #e57373;border-radius:8px;padding:0.5em 1em;margin-bottom:0.7em;font-weight:600;font-size:1em;"></section>
      <button type="submit" class="cadastro-professor-btn">Cadastrar</button>
    </form>
    <script>
      // Validação de senha igual ao aluno e mínimo de 6 dígitos
      document.addEventListener('DOMContentLoaded', function(){
        var form = document.querySelector('.cadastro-professor-form');
        var senha = document.getElementById('prof-password');
        var confirma = document.getElementById('prof-confirm-password');
        var erro = document.getElementById('prof-senha-erro');
        var minErro = document.getElementById('prof-senha-min-erro');
        if(form && senha && confirma && erro && minErro){
          form.addEventListener('submit', function(e){
            let bloqueia = false;
            erro.style.display = 'none';
            minErro.style.display = 'none';
            if(senha.value.length < 6){
              minErro.textContent = 'A senha deve ter pelo menos 6 caracteres.';
              minErro.style.display = 'block';
              senha.focus();
              bloqueia = true;
            }
            if(senha.value !== confirma.value){
              erro.textContent = 'As senhas não coincidem.';
              erro.style.display = 'block';
              confirma.focus();
              bloqueia = true;
            }
            if(bloqueia){
              e.preventDefault();
            }
          });
          senha.addEventListener('input', function(){
            erro.style.display = 'none';
            if(senha.value.length < 6){
              minErro.textContent = 'A senha deve ter pelo menos 6 caracteres.';
              minErro.style.display = 'block';
            }else{
              minErro.style.display = 'none';
            }
          });
          confirma.addEventListener('input', function(){ erro.style.display = 'none'; });
        }
      });
    </script>
    <footer style="width:100%; display:flex; flex-direction:column; align-items:center; margin-top:1.7em;">
      <a href="/professor/login" style="color:#FFD600; font-weight:700; text-decoration:underline; font-size:1.08em;">Já tem uma conta? Faça login</a>
      <span style="margin-top:0.7em; color:#00518C; font-size:1em; opacity:0.85; font-weight:600;">Participe da comunidade de educadores!</span>
    </footer>
    <section style="margin-top: 2.2em; display: flex; justify-content: center; gap: 1.2em;">
      <img src="/img/tcc.img/animal6.png" alt="Professor 2" style="width: 48px; height: 48px; border-radius: 50%; box-shadow: 0 2px 8px #FFD60022; border: 2px solid #FFD600;">
      <img src="/img/tcc.img/animal7.png" alt="Professor 3" style="width: 48px; height: 48px; border-radius: 50%; box-shadow: 0 2px 8px #00CFFF22; border: 2px solid #00CFFF;">
      <img src="/img/tcc.img/animal8.png" alt="Professor 4" style="width: 48px; height: 48px; border-radius: 50%; box-shadow: 0 2px 8px #3bb27322; border: 2px solid #3bb273;">
    </section>
  </section>
  <%- include('partials/footer') %>
</body>
</html>
